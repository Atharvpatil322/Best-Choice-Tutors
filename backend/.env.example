# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/best-choice-tutors

# JWT
JWT_SECRET=best_choice_tutors_secret_key
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Email Configuration (for password reset)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Frontend URL (for OAuth callbacks and password reset links)
FRONTEND_URL=http://localhost:5173

# AWS S3 (file uploads: profile photos, certificates, DBS documents)
# AWS_REGION must match your bucket's region (e.g. ap-south-1 for Mumbai, us-east-1 for N. Virginia)
# Optional: set AWS_S3_ACCESS_POINT_ARN to use an S3 Access Point for uploads (full ARN, e.g. arn:aws:s3:ap-south-1:123456789012:accesspoint/my-ap)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your_bucket_name

# Bank details encryption (32 bytes = 64 hex chars). Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BANK_DETAILS_ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# Razorpay (TEST keys for payments)
RAZORPAY_KEY_ID=your_razorpay_test_key_id
RAZORPAY_KEY_SECRET=your_razorpay_test_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret
